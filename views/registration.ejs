<%- include("partials/header") -%>
    <%- include("partials/navbar") -%>
    <% const tourney = matchdetail.name; %>
    <div class="flex-container">
<form action="/tournament/<%= matchdetail.name %>" method="post">
<div class="registration-table ">
    <h1>Registration for <%= matchdetail.name %></h1>
    <div class="textbox top">
        <i class="fas fa-user"></i>
        <input type="text" name="teamname" placeholder="Team name">
      </div> 
    <div class="textbox">
      <i class="fas fa-user"></i>
      <input type="text" name="ign" placeholder="In game name">
    </div>
    <div class="textbox">
        <i class="fas fa-user"></i>
        <input type="text" name="mobile_number" placeholder="Mobile number">
      </div>
    <div class="textbox">
        <i class="fas fa-user"></i>
        <input type="text" name="email" placeholder="E-mail">
      </div>
      <div class="textbox">
        <i class="fas fa-user"></i>
        <input type="text" name="ign2" placeholder="2nd player IGN">
      </div>
      <div class="textbox">
        <i class="fas fa-user"></i>
        <input type="text" name="ign3" placeholder="3rd player IGN">
      </div>
      <div class="textbox">
        <i class="fas fa-user"></i>
        <input type="text" name="ign4" placeholder="4th player IGN">
      </div>
      <div class="textbox bottom">
        <i class="fas fa-user"></i>
        <input type="text" name="hostname" value="<%= matchdetail.name %>">
      </div>
         
    <input type="submit" class=" textbox btns top bottom " value="Apply">
  </div>
</form>
<div class="width registration-description" style="width: auto;">
  <h1><%= matchdetail.name %> </h1>
  <% var ytembed = matchdetail.ytlink;
     ytembed = ytembed.replace("watch", "embed");  %> 
  <% if(matchdetail.ytlink!="" ){ %> 
    <iframe class="registration-description" width="360" height="315"
  src="<%= ytembed %> ">
  </iframe>  
  <% } %> 


  <p class="para limit" style="text-align: left;"><%=matchdetail.description%></p> 
  <p class="para"><% if(matchdetail.prizepool!="0"){ %></p>  
  <p class="para-prizepool">Prize pool is <%= matchdetail.prizepool %> Rs </p>
  <% } %> 
  <p class="para"><% if(matchdetail.walink!=""){ %></p>  
    <a class="btn btn-outline-success" href="<%=matchdetail.walink%>" role="button" >Whatsapp</a>
    <% } %> 
  
</div>
</div>
